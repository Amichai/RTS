@{
    ViewBag.Title = "Table";
}


<link href="~/Content/Site.css" rel="stylesheet" />

<div ng-app="root" id="root">
    <div ng-controller="tableController" ng-cloak >
        <h2>Table - {{tableID}}</h2>
        <h4>{{username}}</h4>        
        <h3>Connected:</h3>
        <div ng-repeat="u in table.Users">
            {{u.Name}}
        </div>
            
        <h2 ng-show="winner != undefined">PLAYER {{winner}} WINS!</h2>

        <div id="boardState" ng-keypress="keyPress($event)"></div>

        <button ng-show="winner != undefined" class="btn btn-large" ng-click="playAgain()">Play Again</button>
        
    </div>
</div>

@section scripts {
    <script src="~/Scripts/angularcontrollers/tableController.js"></script>
    <script src='~/signalr/js'></script>
    <script src="~/Scripts/d3.v3.js"></script>
}